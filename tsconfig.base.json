{
  "extends": "@tsconfig/strictest/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "emitDeclarationOnly": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": false,
  }
}
